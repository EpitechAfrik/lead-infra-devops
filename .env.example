# Application Configuration
APP_NAME=leadinfradevops
APP_ENV=development
APP_DEBUG=true
APP_PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=appdb
DB_USER=appuser
DB_PASSWORD=changeme_secure_password

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (if needed)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
SECRET_KEY=changeme_generate_random_secret_key
JWT_SECRET=changeme_generate_random_jwt_secret
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring & Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_admin_password

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags (for multi-environment)
FEATURE_NEW_UI=false
FEATURE_BETA_API=false

# Environment-specific settings
# For dev: Set APP_ENV=development
# For staging: Set APP_ENV=staging
# For prod: Set APP_ENV=production

# Notes:
# - Never commit the actual .env file
# - Generate strong random values for secrets
# - Use different credentials per environment
# - Rotate secrets regularly in production
